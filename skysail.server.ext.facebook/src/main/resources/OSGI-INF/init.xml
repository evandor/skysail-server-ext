<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	name="de.twenty11.skysail.server.ext.facebook.BundleInitializer">

	<implementation
		class="de.twenty11.skysail.server.ext.facebook.BundleInitializer" />

	<service>
		<provide interface="de.twenty11.skysail.server.services.ApplicationProvider" />
	</service>

 	<reference 
 		bind="setComponentProvider" 
 		cardinality="1..1" 
 		interface="de.twenty11.skysail.server.services.ComponentProvider" 
 		name="ComponentProvider" 
 		policy="static" 
 	/>
 	
    <reference 
        bind="setServerConfiguration" 
        cardinality="1..1" 
        interface="de.twenty11.skysail.server.config.ServerConfiguration" 
        name="ServerConfiguration" 
        policy="static"/>
 	
 	
 	<reference bind="setEntityManager" cardinality="1..1" 
		interface="javax.persistence.EntityManagerFactory" name="EntityManagerProvider" 
		policy="static"/>	
 	
</scr:component>
